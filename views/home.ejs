<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DataCove - Secure File Storage</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/lucide@latest/dist/umd/lucide.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/lucide@latest/dist/umd/lucide.min.js"></script>
    <style>
        .upload-zone {
            transition: all 0.3s ease;
        }
        .upload-zone:hover {
            border-color: rgb(236 72 153);
            background-color: rgba(255, 255, 255, 0.05);
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-800">
    <!-- Navbar -->
    <nav class="bg-black/20 backdrop-blur-sm border-b border-white/10 py-4">
        <div class="container mx-auto px-4 flex justify-between items-center">
            <div class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-violet-500 flex-row">
                DataCove
            </div>
            <form action="/user/login"><button class="btn-66">Log Out!</button>
                <style>
                .btn-66,
                .btn-66 *,
                .btn-66 :after,
                .btn-66 :before,
                .btn-66:after,
                .btn-66:before {
                  border: 0 solid;
                  box-sizing: border-box;
                }
                .btn-66 {
                  -webkit-tap-highlight-color: 
                transparent;
                  -webkit-appearance: button;
                  background-color: 
                #000;
                  background-image: none;
                  color: 
                #fff;
                  cursor: pointer;
                  font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont,
                    Segoe UI, Roboto, Helvetica Neue, Arial, Noto Sans, sans-serif,
                    Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol, Noto Color Emoji;
                  font-size: 100%;
                  line-height: 1.5;
                  margin: 0;
                  -webkit-mask-image: -webkit-radial-gradient(#000, #fff);
                  padding: 0;
                }
                .btn-66:disabled {
                  cursor: default;
                }
                .btn-66:-moz-focusring {
                  outline: auto;
                }
                .btn-66 svg {
                  display: block;
                  vertical-align: middle;
                }
                .btn-66 [hidden] {
                  display: none;
                }
                .btn-66 {
                  --height: 40px;
                  --progress: 0px;
                  border: 2px solid 
                #fff;
                  border-radius: 999px;
                  box-sizing: border-box;
                  color: 
                transparent;
                  display: block;
                  font-weight: 900;
                  line-height: var(--height);
                  overflow: hidden;
                  padding: 0 60px;
                  position: relative;
                  text-shadow: 0 calc(var(--progress) * -1) 
                #ffffff,
                    0 calc(var(--height) - var(--progress)) 
                rgb(222, 74, 212);
                  text-transform: uppercase;
                  transition: 0.2s;
                }
                .btn-66:hover {
                  --progress: var(--height);
                  border-color: 
                  rgb(222, 74, 212);
                }
                </style>
                </form>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8 flex gap-8">
        <!-- Upload Section -->
        <div class="flex-1">
            <div class="bg-white/10 backdrop-blur-md rounded-2xl p-8 border border-white/20">
                <div class="text-center mb-8">
                    <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-violet-500 mb-2">
                        DataCove
                    </h1>
                    <p class="text-white/70">Your secure file storage solution</p>
                </div>

                <form action="/upload-file" method="post" enctype="multipart/form-data">
                    <div 
                        class="upload-zone border-2 border-dashed border-white/30 rounded-xl p-8 text-center cursor-pointer"
                        onclick="document.getElementById('fileInput').click()"
                    >
                        <input
                            type="file"
                            id="fileInput"
                            name="file"
                            class="hidden"
                            multiple="true"
                            onchange="updateFileList(this)"
                        />
                        <i data-lucide="upload" class="w-12 h-12 mx-auto mb-4 text-pink-500"></i>
                        <p class="text-white/80">
                            Click here or drag & drop your files
                        </p>
                        <p class="text-sm text-white/50 mt-2">
                            Supports all file types
                        </p>
                    </div>

                    <button 
                        type="submit"
                        class="mt-6 w-full py-3 px-4 bg-gradient-to-r from-pink-500 to-violet-500 
                               rounded-lg text-white font-medium transition-all hover:opacity-90
                               hover:shadow-lg hover:shadow-pink-500/25 flex items-center justify-center"
                    >
                        <i data-lucide="file-up" class="w-5 h-5 mr-2"></i>
                        Upload Files
                    </button>
                </form>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="w-96">
            <div class="bg-black/30 backdrop-blur-sm rounded-2xl p-6 border border-white/10">
                <h2 class="text-xl font-semibold text-white mb-4 flex items-center">
                    Uploaded Files
                    <span class="ml-2 text-sm font-normal text-white/50">
                        (<%= files.length %>)
                    </span>
                </h2>

                <div class="space-y-3">
                    <% if (files.length > 0) { %>
                        <% files.forEach(function(file) { %>
                            <div class="bg-white/5 rounded-lg p-3 flex items-center justify-between
                                        border border-white/10 hover:bg-white/10 transition-all">
                                <div class="flex items-center">
                                    <div class="text-white"><%= file.originalName %></div>
                                </div>
                                <a href="/download/<%= encodeURIComponent(file.path) %>" class="text-pink-500 hover:text-pink-400 transition-colors" target="_blank">
                                    <i data-lucide="eye" class="w-5 h-5"></i>
                                </a>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="text-center py-8 text-white/50">
                            No files uploaded yet
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="mt-auto py-6 text-center text-white/70">
        <div class="container mx-auto px-4">
            &copy; 2025 DataCove. Built with
            <span class="text-pink-500">❤️</span> by
            <a 
                href="#" 
                class="text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-violet-500 
                       hover:opacity-80 transition-opacity"
            >
                Prajjawal Agrawal
            </a>
        </div>
    </footer>

    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Update file list when files are selected
        function updateFileList(input) {
            const fileCount = input.files.length;
            const fileText = fileCount === 1 ? '1 file selected' : `${fileCount} files selected`;
            const uploadZone = input.parentElement;
            const textElement = uploadZone.querySelector('p');
            
            if (fileCount > 0) {
                textElement.textContent = fileText;
            }
        }

        // Drag and drop functionality
        const uploadZone = document.querySelector('.upload-zone');
        
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            uploadZone.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        ['dragenter', 'dragover'].forEach(eventName => {
            uploadZone.addEventListener(eventName, highlight, false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            uploadZone.addEventListener(eventName, unhighlight, false);
        });

        function highlight(e) {
            uploadZone.classList.add('border-pink-500');
            uploadZone.classList.add('bg-white/5');
        }

        function unhighlight(e) {
            uploadZone.classList.remove('border-pink-500');
            uploadZone.classList.remove('bg-white/5');
        }

        uploadZone.addEventListener('drop', handleDrop, false);

        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;
            const fileInput = document.getElementById('fileInput');
            
            fileInput.files = files;
            updateFileList(fileInput);
        }
    </script>
</body>
</html>